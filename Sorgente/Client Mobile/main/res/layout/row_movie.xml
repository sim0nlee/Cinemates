<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/dark_grey">

    <LinearLayout
        android:id="@+id/row_film_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titolo_row_txtview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/segoeui"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="Titolo del film"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/poster_imgview"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/data_row_txtview"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/segoeuilight"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="2021-12-12"
                android:textColor="@color/text_grey"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/poster_imgview"
                app:layout_constraintTop_toBottomOf="@+id/titolo_row_txtview" />

            <ImageView
                android:id="@+id/poster_imgview"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/movie_poster_placeholder" />

            <View
                android:id="@+id/movie_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>