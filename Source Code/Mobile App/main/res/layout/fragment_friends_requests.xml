<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_richieste"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FollowRequestsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/richieste_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="LE TUE RICHIESTE" />

    <TextView
        android:id="@+id/nessuna_richiesta_txtview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Le richieste di\nchi vuole seguirti\nappariranno qui"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:fontFamily="@font/segoeuilight"
        android:gravity="center"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>