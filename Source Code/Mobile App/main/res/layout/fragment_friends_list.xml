<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_lista_seguiti"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FriendsListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_seguiti_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Seguiti" />

    <TextView
        android:id="@+id/nessun_seguito_txtview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Le persone che segui\nappariranno qui"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:fontFamily="@font/segoeuilight"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/cerca_un_utente_txtview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Cerca tra gli\nutenti"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:fontFamily="@font/segoeuilight"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nessun_utente_txtview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nessun\nRisultato :("
        android:textColor="@color/white"
        android:textSize="30dp"
        android:fontFamily="@font/segoeuilight"
        android:gravity="center"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>